<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="@dimen/drawerWidth"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/util.cross"
            android:src="@drawable/ic_cross" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/show_all_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:d_title="@string/drawer.show_all" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/search_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:d_title="@string/drawer.search" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/plav_search_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:d_title="@string/drawer.search_plav" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/unite_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:d_title="@string/drawer.unite" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/ship_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:d_title="@string/drawer.ship" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/history_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:d_title="@string/drawer.shipment_history" />

        <com.andreev.skladapp.ui.drawer.DrawerItem
            android:id="@+id/get_di"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:d_title="@string/drawer.get" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.andreev.skladapp.ui.drawer.DrawerItem
                android:id="@+id/logout_di"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:d_dividerBottom="false"
                app:d_title="@string/drawer.exit" />
        </FrameLayout>

    </LinearLayout>
</layout>