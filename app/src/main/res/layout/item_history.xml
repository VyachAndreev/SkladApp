<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="historyPiece"
            type="com.andreev.skladapp.data.HistoryPiece" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextSSmall.Light"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{historyPiece.number}"
            tools:text = "1"/>

        <TextView
            style="@style/TextSSmall.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@{historyPiece.type}"
            tools:text = "Добавление" />

        <TextView
            style="@style/TextSSmall.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@{historyPiece.date}"
            tools:text = "10.11.2020"  />

        <TextView
            style="@style/TextMicro.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@{historyPiece.place}"
            tools:text = "Солнечногорск" />

    </LinearLayout>
</layout>